{
  "name": "line-events",
  "version": "1.0.0",
  "description": "Line-Events is a lightweight and straightforward library that operates based on the Observable pattern. It is designed to provide a simple and efficient alternative for creating Observables in JavaScript and TypeScript applications.",
  "main": "dist/main.min.js",
  "scripts": {
    "test:jest": "jest",
    "test": "jest --coverage",
    "start": "ts-node test/test.ts",
    "build": "npm run clean && tsc",
    "build:watch": "npm run clean && tsc -w",
    "clean": "rimraf dist",
    "minify": "terser dist/main.js -o dist/main.min.js",
    "build:production": "npm run build && npm run minify"
  },
  "keywords": ["line-events", "observable", "observer", "events", "event", "observable-pattern", "observer-pattern", "javascript", "typescript"],
  "author": "Silva, Eduardo Cipriano",
  "license": "MIT",
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "codecov": "^3.8.2",
    "jest": "^29.7.0",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "terser": "^5.34.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@types/jest": "^29.5.13",
    "uuid": "^10.0.0"
  }
}
